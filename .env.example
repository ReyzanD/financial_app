# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Option 1: Use connection string (recommended for Supabase/cloud providers)
DATABASE_URL=postgresql://user:password@host:port/database_name

# Option 2: Use individual parameters (for local development)
POSTGRES_HOST=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=financial_db_232143
POSTGRES_PORT=5432

# ============================================
# Legacy MySQL Configuration (Optional)
# ============================================
# These are for backward compatibility during migration
# Will be removed after full migration to PostgreSQL
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=financial_db_232143
MYSQL_PORT=3306

# ============================================
# JWT Authentication
# ============================================
# ⚠️ IMPORTANT: Generate a strong, random secret key for production!
# Use a secure random string generator (at least 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-very-secure-random-secret-key-here-change-this-in-production

# ============================================
# Application Configuration
# ============================================
# Set to False in production
DEBUG=True

# Server port (default: 5000)
PORT=5000

# ============================================
# API Keys (if needed)
# ============================================
# Add your API keys here if your application uses external services
# API_KEY_EXAMPLE=your_api_key_here

# ============================================
# Security Notes
# ============================================
# 1. Never commit this file or .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate secrets regularly in production
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. Consider using a secrets management service for production
