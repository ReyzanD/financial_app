# Database Configuration
# Use SQLite for local development (no internet required)
USE_SQLITE=true
SQLITE_DB_PATH=backend/financial_app.db

# Security
# Generate a strong secret key with: openssl rand -hex 32
# Minimum 32 characters recommended
JWT_SECRET_KEY=your-strong-secret-key-here-min-32-chars

# Server Configuration
# Set DEBUG=False for production-like testing
# Set DEBUG=True for development (shows detailed errors)
DEBUG=True
PORT=5000

# Optional: PostgreSQL Configuration (not used when USE_SQLITE=true)
# Only needed if switching back to PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database
# POSTGRES_HOST=localhost
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=
# POSTGRES_DB=financial_db_232143
# POSTGRES_PORT=5432
